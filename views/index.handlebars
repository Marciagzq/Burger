<h1>Burger Queen!</h1>

<img src="https://png.pngtree.com/element_pic/17/07/26/eb63d3b8ae4d2a1de45ba95e6d5b53ae.jpg">
<div class="container">

    <div id="devoured">
        <h2>Burgers Devoured!</h2>
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
    </div>


    <div id="not_devoured" >
        <h2>The New Burgers!</h2>

            <ul>
                {{#each burger}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
    </div>

</div>

<hr>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bur" id="burger-name">Burger Name:</label>
        <input type="text" id="bur" name="name" id="adding-burger">
    </div>
        <div class="form-group">
        <label for="devoured" >Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>